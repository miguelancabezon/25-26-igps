@startuml
title Casos de Uso - Biblioteca Central

skinparam backgroundColor #FAFAFA
skinparam actorStyle awesome

actor Estudiante
actor Profesor
actor Bibliotecario
actor Sistema

package "Búsqueda y Consulta" {
  usecase "Buscar en catálogo"
  usecase "Ver historial de préstamos"
  usecase "Consultar estado de libro"
}

package "Gestión de Reservas" {
  usecase "Hacer reserva"
  usecase "Cancelar reserva"
  usecase "Notificar disponibilidad"
}

package "Préstamos" {
  usecase "Solicitar préstamo"
  usecase "Renovar préstamo"
  usecase "Devolver libro"
}

package "Penalizaciones" {
  usecase "Calcular multa"
  usecase "Pagar multa online"
  usecase "Aplicar penalización"
}

package "Operaciones Bibliotecario" {
  usecase "Registrar préstamo manual"
  usecase "Procesar devolución"
}

package "Reportes" {
  usecase "Generar reporte de préstamos"
  usecase "Generar reporte de multas"
}


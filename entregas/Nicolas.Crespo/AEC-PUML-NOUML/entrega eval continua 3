  <script>
    // Mindmap inicial con GoJS
    const $ = go.GraphObject.make;
    const myDiagram = $(go.Diagram, "mindmap", {initialAutoScale: go.Diagram.Uniform});

    myDiagram.nodeTemplate =
      $(go.Node, "Auto",
        $(go.Shape, "RoundedRectangle", {fill: "lightyellow", strokeWidth: 1}),
        $(go.TextBlock, {margin: 6, font: "bold 12pt Segoe UI"}, new go.Binding("text", "key")));

    myDiagram.model = new go.TreeModel([
      { key: "ğŸŒ Legends of Aetheria" },
      { key: "ğŸ® Gameplay", parent: "ğŸŒ Legends of Aetheria" },
      { key: "âš”ï¸ Combate", parent: "ğŸ® Gameplay" },
      { key: "âœ¨ Magia", parent: "âš”ï¸ Combate" },
      { key: "ğŸ¹ Clases", parent: "ğŸ® Gameplay" },
      { key: "ğŸ—ºï¸ Mundo", parent: "ğŸŒ Legends of Aetheria" },
      { key: "ğŸ”ï¸ Regiones", parent: "ğŸ—ºï¸ Mundo" },
      { key: "ğŸ™ï¸ Ciudades", parent: "ğŸ—ºï¸ Mundo" },
      { key: "ğŸ‘¥ Comunidad", parent: "ğŸŒ Legends of Aetheria" },
      { key: "ğŸ’¬ Chat", parent: "ğŸ‘¥ Comunidad" },
      { key: "ğŸ° Guilds", parent: "ğŸ‘¥ Comunidad" },
      { key: "ğŸ’° EconomÃ­a", parent: "ğŸŒ Legends of Aetheria" },
      { key: "âš’ï¸ Crafting", parent: "ğŸ’° EconomÃ­a" },
      { key: "ğŸª Comercio", parent: "ğŸ’° EconomÃ­a" }
    ]);

    // JSON render con formato
    const data = {
      metadata: {version:'1.0.0',language:'es-ES',author:'Legends Studio',date:'2025-11-09T12:00:00Z'},
      player:{id:101,name:'Aelthar',classType:'Mage',level:12,isOnline:true},
      item:{id:205,name:'Staff of Flames',type:'Weapon',rarity:'Epic',damage:75,price:1200},
      quest:{id:401,title:'Defiende Eldara',reward:{xp:500,gold:250}},
      guild:{id:301,name:'Guardians of Aether',rank:'Bronze',isRecruiting:true},
      actions:{createPlayer:{class:'Player',params:['name','classType']},joinGuild:{class:'Guild',params:['playerId','guildId']}}
    };

    function syntaxHighlight(json){
      if(typeof json!='string') json=JSON.stringify(json,undefined,2);
      return json.replace(/("(\\u[a-zA-Z0-9]{4}|\\[^u]|[^\\"])*"(\s*:)?|\b(true|false|null)\b|-?\d+(?:\.\d*)?(?:[eE][+\-]?\d+)?)/g,function(match){
        let cls='number';
        if(/^"/.test(match)) cls=/:$/.test(match)?'key':'string';
        else if(/true|false/.test(match)) cls='boolean';
        return '<span class="'+cls+'">'+match+'</span>';
      });
    }

    document.getElementById('json').innerHTML=syntaxHighlight(data);

    // Tabs Wireframe
    const tabs=document.querySelectorAll('.tab');
    const frames=document.querySelectorAll('.wireframe');
    tabs.forEach(tab=>tab.addEventListener('click',()=>{
      tabs.forEach(t=>t.classList.remove('active'));
      frames.forEach(f=>f.classList.remove('active'));
      tab.classList.add('active');
      document.getElementById(tab.dataset.target).classList.add('active');
    }));
  </script>

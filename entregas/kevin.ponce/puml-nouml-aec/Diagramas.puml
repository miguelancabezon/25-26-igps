        {
            "name": "createWeapon",
            "affects": "Weapon",
            "parameters": [
                { "name": "name", "type": "string", "required": true },
                { "name": "damage", "type": "number", "required": true },
                { "name": "isRanged", "type": "boolean", "required": false }
            ],
            "returns": "Weapon"
        },

        {
            "name": "createCharacter",
            "affects": "Character",
            "parameters": [
                { "name": "name", "type": "string", "required": true },
                { "name": "isNpc", "type": "boolean", "required": false }
            ],
            "returns": "Character"
        },

        {
            "name": "addItemToInventory",
            "affects": "Character.inventory",
            "parameters": [
                { "name": "characterId", "type": "string", "required": true },
                { "name": "itemRef", "type": "object", "required": true, "description": "{refClass, id, name}" }
            ],
            "returns": "inventory"
        },

        {
            "name": "startLevel",
            "affects": "Level",
            "parameters": [
                { "name": "levelId", "type": "string", "required": true },
                { "name": "playerIds", "type": "array", "required": false }
            ],
            "returns": "session"
        },

        {
            "name": "processDamage",
            "affects": "Character",
            "parameters": [
                { "name": "targetId", "type": "string", "required": true },
                { "name": "amount", "type": "number", "required": true },
                { "name": "sourceId", "type": "string", "required": false }
            ],
            "returns": "Character"
        }
    ],

    "config": {
        "systemVersion": "0.1.0",
        "defaultLanguage": "es",
        "deployment": "staging",
        "contact": "kevin@example.com"
